
.modal-include-image{
  position:absolute;
width:100%;
height:100%;
top:0;
}
.modal-mask{
  height: 100%;
  background-color: black;
  opacity: 0.3;
}
.modal-content{
 position:absolute;
top:10%;
left:5%;
width:90%;
background-color:white;
border-radius:30rpx;
/* padding: 10rpx 20rpx; */
}
.modal-header{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
}
.modal-body{
  text-align: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 10rpx;
}
.modal-footer{
  display: flex;
  border-top: solid 2rpx #ccc; 
  
}
.modal-btn{
  /* display: inline-block; */
  flex-grow: 1;
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.modal-btn:nth-child(1){
  border-right: solid 2rpx #ccc;
}